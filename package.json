{
  "name": "srcl",
  "description": "SRCL is an open-source React component and style repository that helps you build web applications, desktop applications, and static websites with terminal aesthetics.",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "version": "1.1.7",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port 10000",
    "dev:server": "tsx watch server/index.ts",
    "build": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:lib": "tsc -p tsconfig.lib.json && tsc-alias -p tsconfig.lib.json && vite build -c vite.lib.config.ts",
    "start": "NODE_ENV=production node dist/server/index.js",
    "preview": "vite preview --port 10000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.22.3",
    "sass": "1.89.0",
    "tailwind-merge": "^3.3.1"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2",
    "vite": "^5.1.6",
    "tsc-alias": "^1.8.10"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./common/*": {
      "types": "./dist/common/*.d.ts",
      "import": "./dist/common/*.js"
    },
    "./pages/*": {
      "types": "./dist/src/pages/*.d.ts",
      "import": "./dist/src/pages/*.js"
    },
    "./HomePage": {
      "types": "./dist/src/pages/HomePage.d.ts",
      "import": "./dist/src/pages/HomePage.js"
    },
    "./ShowcasePage": {
      "types": "./dist/src/pages/ShowcasePage.d.ts",
      "import": "./dist/src/pages/ShowcasePage.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./modules/hotkeys/*": {
      "types": "./dist/modules/hotkeys/*.d.ts",
      "import": "./dist/modules/hotkeys/*.js"
    },
    "./global.css": "./dist/assets/global.css",
    "./global.scss": "./global.scss"
  },
  "typesVersions": {
    "*": {
      "components/*": [
        "dist/components/*"
      ],
      "common/*": [
        "dist/common/*"
      ],
      "pages/*": [
        "dist/src/pages/*"
      ],
      "HomePage": [
        "dist/src/pages/HomePage"
      ],
      "ShowcasePage": [
        "dist/src/pages/ShowcasePage"
      ],
      "lib/*": [
        "dist/lib/*"
      ],
      "modules/hotkeys/*": [
        "dist/modules/hotkeys/*"
      ],
      "*": [
        "dist/*"
      ]
    }
  },
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "sideEffects": [
    "**/*.scss"
  ],
  "files": [
    "dist",
    "global.scss"
  ]
}
