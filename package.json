{
  "name": "srcl",
  "description": "SRCL is an open-source React component and style repository that helps you build web applications, desktop applications, and static websites with terminal aesthetics.",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "version": "1.1.7",
  "type": "module",
  "main": "./dist/srcl.cjs.js",
  "module": "./dist/srcl.es.js",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/srcl.es.js",
      "require": "./dist/srcl.cjs.js"
    },
    "./global.scss": "./global.scss"
  },
  "files": [
    "dist",
    "global.scss",
    "components",
    "common",
    "lib",
    "modules",
    "src/types"
  ],
  "sideEffects": [
    "**/*.scss"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port 10000",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build --config vite.library.config.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "build:server": "tsc -p tsconfig.server.json",
    "build:demo": "tsc && vite build",
    "start": "NODE_ENV=production node dist/server/index.js",
    "preview": "vite preview --port 10000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.22.3",
    "sass": "1.89.0",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@eslint/js": "^9.14.0",
    "globals": "^13.24.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.1.6"
  }
}
