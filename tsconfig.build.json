{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "noEmit": false,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/index.ts",
    "components/**/*",
    "common/**/*",
    "lib/**/*",
    "modules/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/main.tsx",
    "src/App.tsx",
    "src/Layout.tsx",
    "src/pages/**/*",
    "demos",
    "public"
  ]
}
